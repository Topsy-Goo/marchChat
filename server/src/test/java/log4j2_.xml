<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%n%-5p %c{2} [%t] (%F:%L) - %m." />
        </Console>

        <File name="HANDLER" fileName="${basePath}/handler.log" append="false">
            <PatternLayout pattern="%n%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C{2} (%F:%L) - %m." />
        </File>

        <File name="SERVER" fileName="${basePath}/server01.log" append="true">
            <PatternLayout pattern="%n%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C{2} (%F:%L) - %m." />
        </File>

        <File name="SERVERAPP" fileName="${basePath}/serverapp.log" append="true">
            <PatternLayout pattern="%n%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C{2} (%F:%L) - %m." />
        </File>

        <File name="CONTROLLER" fileName="${basePath}/controller.log" append="false">
            <PatternLayout pattern="%n%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C{2} (%F:%L) - %m." />
        </File>

        <File name="AUTHENTIFICATOR" fileName="${basePath}/authentificator.log" append="false">
            <PatternLayout pattern="%n%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C{2} (%F:%L) - %m." />
        </File>

    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="STDOUT" />
        </Root>
        <Logger name="ru.geekbrains.march.chat.server.Server" level="trace" >
        	<AppenderRef ref="SERVER"/>
        </Logger>

        <Logger name="ru.geekbrains.march.chat.server.ServerApp" level="trace" >
        	<AppenderRef ref="SERVERAPP"/>
        </Logger>

        <Logger name="ru.geekbrains.march.chat.server.ClientHandler" level="trace" >
        	<AppenderRef ref="HANDLER"/>
        </Logger>

        <Logger name="ru.geekbrains.march.chat.client.Controller" level="trace" >
        	<AppenderRef ref="CONTROLLER"/>
        </Logger>

        <Logger name="ru.geekbrains.march.chat.server.JdbcAuthentificationProvider" level="trace" >
        	<AppenderRef ref="AUTHENTIFICATOR"/>
        </Logger>

    </Loggers>

</Configuration>
